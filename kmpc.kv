#:kivy 1.10.0
#:import ConfigTabbedPanelItem configpanel.ConfigTabbedPanelItem
#:import PlaylistTabbedPanelItem playlistpanel.PlaylistTabbedPanelItem
#:import PlaylistRow playlistpanel.PlaylistRow
#:import PlaylistRecycleBoxLayout playlistpanel.PlaylistRecycleBoxLayout
#:import LibraryTabbedPanelItem librarypanel.LibraryTabbedPanelItem

<Widget>:
    font_name: 'resources/Palatino Linotype Bold.ttf'
    font_size: '20sp'

<Button>:
    border: (4,4,4,4)
    background_normal: 'resources/button-normal.png'
    background_down: 'resources/button-down.png'

<BackdropBoxLayout@BoxLayout>:
    canvas.before:
        Rectangle:
            source: "resources/backdrop.png"
            size: self.size
            pos: self.pos
        Color:
            rgba: 0,0.2,1,0.2
        Rectangle:
            size: self.size
            pos: self.pos

<MediaButton@Button,MediaToggleButton@ToggleButton>:
    font_name: 'resources/FontAwesome.ttf'
    font_size: '24sp'

<ScrollButton>:
    halign: 'left'
    valign: 'center'
    padding_x: '10sp'
    padding_y: '10sp'
    size_hint_y: None
    size_hint_min_y: '50sp'
    text_size: self.width, None
    height: self.texture_size[1]

<ScrollBoxLayout>:
    size_hint_y: None
    size_hint_min_y: '50sp'

<LibraryBoxLayout@BoxLayout>:
    canvas.before:
        Rectangle:
            source: "resources/list-backdrop.png"
            size: self.size
            pos: self.pos

<LibraryScrollView@ScrollView,PlaylistScrollView@ScrollView>:
    size_hint: (1,1)
    do_scroll_x: False

<InfoLargeLabel@Label>:
    font_size: '24sp'
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
    halign: 'center'

<InfoSmallLabel@Label>:
    font_size: '18sp'
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
    halign: 'center'

<ConfigTabbedPanelItem>:
    text: 'Config'
    Label:
        text: 'tab4 stuff'

<PlaylistRow>:
    canvas.before:
        Rectangle:
            source: "resources/list-backdrop-selected.png" if self.iscurrent else "resources/list-backdrop.png"          
            size: self.size
            pos: self.pos
        Color:
            rgba: (1,1,0,0.5) if self.selected else (0,0,0,0)
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: (1,1,0,0.7) if self.iscurrent else (1,1,1,0.3)
        Rectangle:
            size: (self.width,sp(3)) if self.iscurrent else (self.width,sp(1))
            pos: self.pos
        Rectangle:
            size: (self.width,sp(3)) if self.iscurrent else (self.width,sp(1))
            pos: (self.x,self.top)
    plpos: ''
    rownum: ''
    artist: ''
    title: ''
    iscurrent: False
    Label:
        size_hint_x: None
        text: root.rownum
    Label:
        size_hint_x: 1
        halign: 'left'
        valign: 'center'
        text_size: self.size
        text: root.artist+' - '+root.title

<LibraryRow>:
    canvas.before:
        Rectangle:
            source: "resources/list-backdrop.png"          
            size: self.size
            pos: self.pos
        Color:
            rgba: (1,1,0,0.5) if self.selected else (0,0,0,0)
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: (1,1,1,0.3)
        Rectangle:
            size: (self.width,sp(1))
            pos: self.pos
        Rectangle:
            size: (self.width,sp(1))
            pos: (self.x,self.top)
    value: ''
    base: 'root'
    level: 'root'
    upto: None
    info: {}
    Label:
        size_hint_x: 1
        halign: 'left'
        valign: 'center'
        text_size: self.size
        text: root.value
        padding_x: sp(10)

<PlaylistTabbedPanelItem>:
    text: 'Playlist'
    rv: rv
    rbl: rbl
    BackdropBoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            Button:
                text: 'Clear'
                on_press: root.playlist_clear_pressed()
            Button:
                text: 'Delete'
                on_press: root.playlist_delete_pressed()
            Button:
                text: 'Move'
                on_press: root.playlist_move_pressed()
            Button:
                text: 'Shuffle'
                on_press: root.playlist_shuffle_pressed()
            Button:
                text: 'Swap'
                on_press: root.playlist_swap_pressed()
        RecycleView:
            id: rv
            scroll_type: ['bars','content']
            bar_width: sp(40)
            viewclass: 'PlaylistRow'
            PlaylistRecycleBoxLayout:
                id: rbl
                default_size: None, sp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: sp(2)
                multiselect: True
                touch_multiselect: True

<LibraryTabbedPanelItem>:
    text: 'Library'
    rv: rv
    rbl: rbl
    current_header: current_header
    BackdropBoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            ToggleButton:
                text: 'Files'
                id: files_button
                on_press: root.change_view_type(self.text)
            ToggleButton:
                text: 'Albums'
                id: albums_button
                on_press: root.change_view_type(self.text)
            ToggleButton:
                text: 'Tracks'
                id: tracks_button
                on_press: root.change_view_type(self.text)
            ToggleButton:
                text: 'Playlists'
                id: playlists_button
                on_press: root.change_view_type(self.text)
        Label:
            id: current_header
            size_hint_y: 0.1
            size_hint_x: 1
            padding_x: sp(10)
            text: ''
            text_size: self.size
            halign: 'center'
            valign: 'middle'
        BoxLayout:
            orientation: 'horizontal'
            RecycleView:
                id: rv
                size_hint_y: 1
                size_hint_x: 1
                rv_selection: {}
                scroll_type: ['bars','content']
                bar_width: sp(40)
                viewclass: 'LibraryRow'
                LibraryRecycleBoxLayout:
                    id: rbl
                    default_size: None, sp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: sp(2)
                    multiselect: True
                    touch_multiselect: True
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: '0.05'
                Button:
                    text: '+'
                    on_press: root.browser_add(False)
                Button:
                    text: '!'
                    on_press: root.browser_add(True)

<KmpcInterface>:
    do_default_tab: False
    tab_width: self.width / 4
    active_tab: None
    TabbedPanelItem:
        text: 'Now Playing'
        BackdropBoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                spacing: '5sp'
                padding: '5sp'
                size_hint: (1,1)
                Image:
                    id: album_cover_image
                    size_hint: (None,None)
                    allow_stretch: True
                    source: 'resources/album.png'
                    height: "300sp"
                    width: "300sp"
                BoxLayout:
                    size_hint_x: 1
                    size_hint_y: 1
                    orientation: 'vertical'
                    InfoLargeLabel:
                        id: current_artist_label
                        text: 'ARTIST NAME'
                    Label:
                    InfoLargeLabel:
                        id: current_song_label
                        text: 'SONG NAME'
                    Label:
                    InfoLargeLabel:
                        id: current_album_label
                        text: 'ALBUM NAME [YEAR]'
                    Label:
                    InfoSmallLabel:
                        id: next_track_label
                        text: 'Up Next:'
                    InfoSmallLabel:
                        id: next_song_artist_label
                        text: 'NEXT SONG ARTIST - NEXT SONG NAME'
            BoxLayout:
                size_hint_y: 0.15
                orientation: 'horizontal'
                Label:
                    id: current_track_time_label
                    size_hint: (0.1,1)
                    valign: 'center'
                    size: self.texture_size
                    text: '0:00'
                Slider:
                    id: current_track_slider
                    size_hint_y: 1
                    value_track: True
                    valign: 'center'
                    max: '1000'
                    on_touch_move: if self.collide_point(*args[1].pos): root.current_track_slider_move()
                    on_touch_up: if self.collide_point(*args[1].pos): root.current_track_slider_up()
                Label:
                    id: current_track_totaltime_label
                    size_hint: (0.1,1)
                    valign: 'center'
                    size: self.texture_size
                    text: '0:00'
            BoxLayout:
                size_hint_y: 0.1
                orientation: 'horizontal'
                Label:
                    size_hint_x: 0.2
                    padding_x: '10sp'
                Label:
                    size_hint_y: 1
                    padding_x: '10sp'
                    text_size: self.size
                    id: current_playlist_track_number_label
                    text: '1 of 10'
                    halign: 'center'
                    valign: 'middle'
                BoxLayout:
                    size_hint_y: 1
                    size_hint_x: 0.2
                    id: song_star_layout
            BoxLayout:
                size_hint: (1,0.15)
                orientation: 'horizontal'
                MediaButton:
                    id: prev_button
                    text: u"\uf049"
                    on_press: root.prev_pressed()
                MediaToggleButton:
                    id: play_button
                    text: u"\uf04b"
                    on_press: root.play_pressed()
                MediaButton:
                    id: next_button
                    text: u"\uf050"
                    on_press: root.next_pressed()
                MediaToggleButton:
                    id: repeat_button
                    text: u"\uf079"
                    on_press: root.repeat_pressed()
                MediaToggleButton:
                    id: single_button
                    text: u"\uf192"
                    on_press: root.single_pressed()
                MediaToggleButton:
                    id: random_button
                    text: u"\uf074"
                    on_press: root.random_pressed()
                MediaToggleButton:
                    id: consume_button
                    text: u"\uf147"
                    on_press: root.consume_pressed()
    PlaylistTabbedPanelItem:
        id: playlist_tab
    LibraryTabbedPanelItem:
        id: library_tab
    ConfigTabbedPanelItem:
