#:kivy 1.10.0

<KmpcInterface>:
    do_default_tab: False
    active_tab: None
    file_browser_base: '/'
    artist_browser_base: {"level":"root","base":"root","upto":None}
    track_browser_base: {"level":"root","base":"root"}
    TabbedPanelItem:
        text: 'Now Playing'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Image:
                    allow_stretch: True
                    source: 'test.jpg'
                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        orientation: 'vertical'
                        Label:
                            id: current_song_label
                            font_size: '20sp'
                            text: 'SONG NAME'
                        Label:
                            id: current_artist_label
                            font_size: '20sp'
                            text: 'ARTIST NAME'
                        Label:
                            id: current_album_label
                            font_size: '20sp'
                            text: 'ALBUM NAME [YEAR]'
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: (1,0.2)
                        Label:
                            text: 'Up Next:'
                        Label:
                            id: next_song_artist_label
                            text: 'NEXT SONG ARTIST - NEXT SONG NAME'
            BoxLayout:
                size_hint: (1.0,0.1)
                orientation: 'horizontal'
                Label:
                    id: current_track_time_label
                    size_hint: (0.1,1)
                    text: '0:00'
                ProgressBar:
                    id: current_track_progressbar
                    max: '1000'
                Label:
                    id: current_track_totaltime_label
                    size_hint: (0.1,1)
                    text: '5:00'
            BoxLayout:
                size_hint: (1.0,0.1)
                orientation: 'horizontal'
                Label:
                    id: current_playlist_track_number_label
                    text: '1 of 10'
            BoxLayout:
                size_hint: (1.0,0.2)
                orientation: 'horizontal'
                Button:
                    id: prev_button
                    text: 'Prev'
                    on_press: root.prev_pressed()
                ToggleButton:
                    id: play_button
                    text: 'Play'
                    on_press: root.play_pressed()
                Button:
                    id: next_button
                    text: 'Next'
                    on_press: root.next_pressed()
                ToggleButton:
                    id: repeat_button
                    text: 'Repeat'
                    on_press: root.repeat_pressed()
                ToggleButton:
                    id: single_button
                    text: 'Single'
                    on_press: root.single_pressed()
                ToggleButton:
                    id: shuffle_button
                    text: 'Shuffle'
                    on_press: root.shuffle_pressed()
                ToggleButton:
                    id: consume_button
                    text: 'Consume'
                    on_press: root.consume_pressed()
    TabbedPanelItem:
        text: 'Playlist'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.1
                Button:
                    text: 'Clear'
                    on_press: root.playlist_clear_pressed()
                Button:
                    text: 'Delete'
                    on_press: root.playlist_delete_pressed()
                Button:
                    text: 'Move'
                    on_press: root.playlist_move_pressed()
                Button:
                    text: 'Shuffle'
                    on_press: root.playlist_shuffle_pressed()
                Button:
                    text: 'Swap'
                    on_press: root.playlist_swap_pressed()
            ScrollView:
                id: playlist_sv
                size_hint: (1,1)
                do_scroll_x: False
    TabbedPanelItem:
        text: 'Library'
        TabbedPanel:
            id: library_panel
            active_tab: None
            do_default_tab: False
            TabbedPanelItem:
                text: 'Files'
				id: library_files_panel
            TabbedPanelItem:
                id: library_artists_panel
                text: 'Albums'
            TabbedPanelItem:
                id: library_tracks_panel
                text: 'Tracks'
            TabbedPanelItem:
                id: library_playlists_panel
                text: 'Playlists'
            TabbedPanelItem:
                id: library_genres_panel
                text: 'Genres'
    TabbedPanelItem:
        text: 'Config'
        Label:
            text: 'tab4 stuff'
    TabbedPanelItem:
        text: 'Debug'
